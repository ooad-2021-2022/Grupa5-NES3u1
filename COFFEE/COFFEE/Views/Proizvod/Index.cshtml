@model IEnumerable<COFFEE.Models.Proizvod>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrstaProizvoda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Popust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ocjena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrijemeCekanja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NutritivnaVrijednost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NaStanju)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VrstaProizvoda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Popust.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ocjena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VrijemeCekanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NutritivnaVrijednost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NaStanju)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <nobr>|</nobr>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    <nobr>|</nobr>
                 }
                 <a asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>

        </tr>
}
    </tbody>
</table>
